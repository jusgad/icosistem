# ============================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION TEMPLATE
# ============================================================================
# IMPORTANT: 
# 1. Copy this file to .env.production
# 2. Replace all placeholder values with secure production values
# 3. NEVER commit .env.production to version control
# 4. Use environment variables in production deployment
# ============================================================================

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
FLASK_APP=run.py
FLASK_ENV=production
FLASK_DEBUG=false
APP_NAME="Ecosistema de Emprendimiento"
APP_VERSION=1.0.0

# Application URLs (UPDATE THESE)
APP_URL=https://your-domain.com
API_URL=https://your-domain.com/api/v1
FRONTEND_URL=https://your-domain.com
ADMIN_URL=https://your-domain.com/admin

# ============================================================================
# SECURITY CONFIGURATION - CRITICAL: CHANGE ALL VALUES
# ============================================================================
# Generate secure keys using: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=CHANGE_THIS_TO_SECURE_256_BIT_KEY_GENERATED_RANDOMLY
JWT_SECRET_KEY=CHANGE_THIS_TO_DIFFERENT_SECURE_JWT_KEY_GENERATED_RANDOMLY
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000
SECURITY_PASSWORD_SALT=CHANGE_THIS_TO_SECURE_PASSWORD_SALT

# CSRF Protection
WTF_CSRF_ENABLED=true
WTF_CSRF_TIME_LIMIT=3600
WTF_CSRF_SECRET_KEY=CHANGE_THIS_TO_SECURE_CSRF_KEY

# ============================================================================
# DATABASE CONFIGURATION - PRODUCTION
# ============================================================================
# PostgreSQL Production Database (RECOMMENDED)
DATABASE_URL=postgresql://username:password@localhost:5432/ecosistema_production
# Alternative: MySQL
# DATABASE_URL=mysql://username:password@localhost:3306/ecosistema_production

# Database Connection Pool Settings
SQLALCHEMY_ENGINE_OPTIONS_POOL_SIZE=10
SQLALCHEMY_ENGINE_OPTIONS_POOL_TIMEOUT=30
SQLALCHEMY_ENGINE_OPTIONS_POOL_RECYCLE=3600
SQLALCHEMY_ENGINE_OPTIONS_MAX_OVERFLOW=20

# ============================================================================
# REDIS CONFIGURATION - PRODUCTION
# ============================================================================
REDIS_URL=redis://localhost:6379/0
# For Redis with authentication:
# REDIS_URL=redis://username:password@localhost:6379/0
# For Redis Cluster:
# REDIS_URL=redis://redis-cluster:6379/0

# Cache Configuration
CACHE_TYPE=redis
CACHE_REDIS_URL=redis://localhost:6379/1
CACHE_DEFAULT_TIMEOUT=300

# ============================================================================
# EMAIL CONFIGURATION - PRODUCTION
# ============================================================================
# SMTP Configuration (UPDATE THESE)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@domain.com
MAIL_PASSWORD=your-app-specific-password
MAIL_DEFAULT_SENDER=noreply@your-domain.com

# SendGrid Alternative
# SENDGRID_API_KEY=your-sendgrid-api-key
# SENDGRID_DEFAULT_FROM=noreply@your-domain.com

# ============================================================================
# FILE STORAGE CONFIGURATION
# ============================================================================
# Local Storage (Development)
UPLOAD_FOLDER=/var/www/uploads
MAX_CONTENT_LENGTH=16777216

# AWS S3 Configuration (RECOMMENDED FOR PRODUCTION)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_DEFAULT_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name
AWS_S3_CUSTOM_DOMAIN=your-cloudfront-domain.com

# Google Cloud Storage Alternative
# GCS_BUCKET_NAME=your-gcs-bucket
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# ============================================================================
# SECURITY HEADERS AND HTTPS
# ============================================================================
FORCE_HTTPS=true
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true

# Content Security Policy
CSP_DEFAULT_SRC=self
CSP_SCRIPT_SRC=self unsafe-inline
CSP_STYLE_SRC=self unsafe-inline
CSP_IMG_SRC=self data: https:
CSP_FONT_SRC=self https:

# ============================================================================
# RATE LIMITING
# ============================================================================
RATELIMIT_STORAGE_URL=redis://localhost:6379/2
RATELIMIT_DEFAULT=100/hour
RATELIMIT_LOGIN_ATTEMPTS=5/minute
RATELIMIT_API_CALLS=1000/hour

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_LEVEL=INFO
LOG_FILE=/var/log/ecosistema/app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Security Logging
SECURITY_LOG_LEVEL=WARNING
SECURITY_LOG_FILE=/var/log/ecosistema/security.log
AUDIT_LOG_ENABLED=true

# ============================================================================
# MONITORING AND HEALTH CHECKS
# ============================================================================
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
MONITORING_TOKEN=your-secure-monitoring-token

# Sentry Error Monitoring (OPTIONAL)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ============================================================================
# CELERY BACKGROUND TASKS (OPTIONAL)
# ============================================================================
CELERY_BROKER_URL=redis://localhost:6379/3
CELERY_RESULT_BACKEND=redis://localhost:6379/4

# ============================================================================
# API CONFIGURATION
# ============================================================================
API_VERSION=1.0
API_PAGINATION_DEFAULT=25
API_PAGINATION_MAX=100

# API Keys for external services
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key

# ============================================================================
# BACKUP CONFIGURATION
# ============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket

# ============================================================================
# DEVELOPMENT OVERRIDES
# ============================================================================
# Set to true only for development/staging
TESTING=false
DEVELOPMENT_MODE=false